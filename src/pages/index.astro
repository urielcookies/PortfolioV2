---
// import Welcome from '../components/Welcome.astro';
import Navbar from '../components/Portfolio/Navbar.astro';
import Intro from '../components/Portfolio/Intro.astro';
import About from '../components/Portfolio/About.astro';
import Services from '../components/Portfolio/Services.astro';
import MyWork from '../components/Portfolio/MyWork/MyWork.jsx';
import ContactMe from '../components/Portfolio/ContactMe.astro';
import MapSection from '../components/Portfolio/MapSection.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Navbar />
  <Intro />
  <About />
  <MyWork client:visible />
  <Services />
  <ContactMe />
  <MapSection />

  <div id="redirectModal" class="modal-overlay">
    <div class="modal-content">
      <h3>Leaving Soon?</h3>
      <p>You're about to navigate to a new page. Do you want to proceed?</p>
      <div class="modal-actions">
        <button id="modalStayButton" class="btn btn-modal-secondary">Stay Here</button>
        <button id="modalProceedButton" class="btn btn-modal-primary">Let's Go</button>
      </div>
    </div>
  </div>
</Layout>

<style>
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0s linear 0.3s;
}

.modal-overlay.modal-open {
  opacity: 1;
  visibility: visible;
  transition: opacity 0.3s ease;
}

.modal-content {
  background-color: var(--color-bg, #2d3748);
  color: var(--color-text, #f7fafc);
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
  text-align: center;
  max-width: 400px;
  width: 90%;
  transform: scale(0.95);
  transition: transform 0.3s ease;
}

.modal-overlay.modal-open .modal-content {
    transform: scale(1);
}

.modal-content h3 {
  margin-top: 0;
  color: var(--color-highlight, #63b3ed);
  font-size: 1.5rem;
}

.modal-content p {
  margin-bottom: 1.5rem;
  font-size: 1rem;
  line-height: 1.6;
}

.modal-actions {
  display: flex;
  justify-content: space-around;
  gap: 1rem;
}

.btn-modal-primary, .btn-modal-secondary {
  padding: 0.75rem 1.5rem;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
  border: none;
  font-size: 0.9rem;
  transition: background-color 0.2s ease, opacity 0.2s ease;
  text-transform: uppercase;
}

.btn-modal-primary {
  background-color: var(--color-highlight, #63b3ed);
  color: var(--color-bg, #1a202c);
  border: 1px solid var(--color-highlight, #63b3ed);
}

.btn-modal-primary:hover {
  opacity: 0.85;
}

.btn-modal-secondary {
  background-color: transparent;
  color: var(--color-text, #f7fafc);
  border: 1px solid var(--color-text, #f7fafc);
}

.btn-modal-secondary:hover {
  background-color: rgba(255, 255, 255, 0.1);
}
</style>