---
// src/layouts/UrielCookiesLayout.astro
import '../styles/global.css';
import Navigation from '../components/Urielcookies/Navigation.astro';

// The scoped theme key for "urielcookies"
const THEME_STORAGE_KEY = 'urielcookies_theme';

const menuTitle = 'Apps'
const siteTitle = "urielcookies apps";
const navLinks = [
  { href: "/", text: "Portfolio V2" },
  { href: "https://everspass.com", text: "EversPass" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <meta name="generator" content={Astro.generator} />
    <title>urielcookies apps</title>

    <script is:inline define:vars={{ THEME_STORAGE_KEY }}>
      const getInitialTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem(THEME_STORAGE_KEY)) {
          return localStorage.getItem(THEME_STORAGE_KEY);
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      };

      const theme = getInitialTheme();
      document.documentElement.classList.toggle('dark', theme === 'dark');
      if (typeof localStorage !== 'undefined' && !localStorage.getItem(THEME_STORAGE_KEY)) {
        localStorage.setItem(THEME_STORAGE_KEY, theme);
      }
    </script>

  </head>
  <body class="bg-white text-slate-800 dark:bg-slate-900 dark:text-slate-200 transition-colors duration-300 ease-in-out">
    <Navigation siteTitle={siteTitle} navLinks={navLinks} menuTitle={menuTitle} />
    <!-- <main class="px-4 sm:px-6 lg:px-8 py-6 md:py-8"> -->
      <slot />
    <!-- </main> -->
  </body>
</html>