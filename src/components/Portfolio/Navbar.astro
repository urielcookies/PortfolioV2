  <a href="/urielcookies" class="logo" id="logoLink">urielcookies</a>
  <button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </button>
  <ul class="links">
    <li><a href="#intro">INTRO</a></li>
    <li><a href="#about">ABOUT</a></li>
    <li><a href="#work">WORK</a></li>
    <li><a href="#services">SERVICES</a></li>
    <li><a href="#contact">CONTACT</a></li>
    <li><a href="/resume/EversResume2025.pdf" class="resume-nav-button" target="_blank" rel="noopener noreferrer">RESUME</a></li>
  </ul>
</nav>

<script type="module">
  let hasInitializedNavAndModal = false;

  let logoLink = null;
  let links = null;
  let hamburger = null;
  let navLinksList = null;
  let sections = null;
  let redirectModal = null;
  let modalStayButton = null;
  let modalProceedButton = null;
  let targetRedirectUrl = '';

  function setActiveLink(currentHash) {
    if (!links) return;
    links.forEach(link => {
      if (link.id !== 'logoLink') {
        if (link.getAttribute('href') === currentHash) {
          link.classList.add('active');
        } else {
          link.classList.remove('active');
        }
      }
    });
  }

  function toggleMenu() {
    if (navLinksList && hamburger) {
      const isOpen = navLinksList.classList.toggle('open');
      hamburger.classList.toggle('open');
      hamburger.setAttribute('aria-expanded', isOpen.toString());
    }
  }

  function closeMenu() {
    if (navLinksList) navLinksList.classList.remove('open');
    if (hamburger) {
      hamburger.classList.remove('open');
      hamburger.setAttribute('aria-expanded', 'false');
    }
  }

  function onScroll() {
    if (!sections || !links) {
        const currentHash = window.location.hash;
        if ((currentHash === '#intro' || (!currentHash && window.scrollY === 0)) && links) {
             setActiveLink('#intro');
        } else if (links) {
            links.forEach(link => link.classList.remove('active'));
        }
        document.title = 'EversCode';
        if (window.location.hash && currentHash !== '#intro') {
            history.replaceState(null, document.title, window.location.pathname + window.location.search);
        }
        return;
    }

    let currentSectionId = '';
    const scrollY = window.scrollY;
    const navElement = document.getElementById('navbar');
    const navHeight = navElement ? navElement.offsetHeight : 100;
    const offset = navHeight + 30;

    sections.forEach(section => {
      const sectionTop = section.offsetTop - offset;
      const sectionBottom = sectionTop + section.offsetHeight;
      if (scrollY >= sectionTop && scrollY < sectionBottom) {
        currentSectionId = section.getAttribute('id');
      }
    });
    
    if (!currentSectionId && sections.length > 0) {
        if (scrollY < sections[0].offsetTop - navHeight) {
            currentSectionId = 'intro'; 
        } else if (scrollY + window.innerHeight >= document.body.scrollHeight - 50) {
            currentSectionId = sections[sections.length - 1].getAttribute('id');
        }
    }

    if (currentSectionId) {
      setActiveLink(`#${currentSectionId}`);
      const titleSection = currentSectionId.charAt(0).toUpperCase() + currentSectionId.slice(1).toLowerCase();
      document.title = `${titleSection} â€” EversCode`;

      if (currentSectionId !== 'intro' && window.location.hash !== `#${currentSectionId}`) {
        history.replaceState(null, document.title, `#${currentSectionId}`);
      } else if (currentSectionId === 'intro' && window.location.hash) {
        history.replaceState(null, document.title, window.location.pathname + window.location.search);
      }
    } else if (scrollY === 0) { 
        setActiveLink('#intro'); 
        document.title = 'EversCode';
        history.replaceState(null, document.title, window.location.pathname + window.location.search);
    }
  }

  function initializeNavAndModal() {
    if (hasInitializedNavAndModal) {
      return; 
    }
    hasInitializedNavAndModal = true;

    logoLink = document.getElementById('logoLink');
    links = document.querySelectorAll('ul.links li a');
    hamburger = document.querySelector('.hamburger');
    navLinksList = document.querySelector('ul.links');
    sections = document.querySelectorAll('section[id]');

    redirectModal = document.getElementById('redirectModal');
    modalStayButton = document.getElementById('modalStayButton');
    modalProceedButton = document.getElementById('modalProceedButton');

    if (logoLink) {
      logoLink.addEventListener('click', (event) => {
        event.preventDefault();
        targetRedirectUrl = logoLink.href;
        if (redirectModal) {
          redirectModal.classList.add('modal-open');
        } else {
          if (targetRedirectUrl) window.location.href = targetRedirectUrl;
        }
        if (navLinksList && navLinksList.classList.contains('open')) {
          closeMenu();
        }
      });
    }

    if (modalStayButton) {
      modalStayButton.addEventListener('click', () => {
        if (redirectModal) redirectModal.classList.remove('modal-open');
      });
    }

    if (modalProceedButton) {
      modalProceedButton.addEventListener('click', () => {
        if (redirectModal) redirectModal.classList.remove('modal-open');
        if (targetRedirectUrl) window.location.href = targetRedirectUrl;
      });
    }

    if (redirectModal) {
      redirectModal.addEventListener('click', (event) => {
        if (event.target === redirectModal) redirectModal.classList.remove('modal-open');
      });
    }

    if (hamburger) {
      hamburger.addEventListener('click', toggleMenu);
    }

    if (links) {
      links.forEach(linkElement => {
        if (linkElement.id !== 'logoLink') {
          linkElement.addEventListener('click', () => {
            if (navLinksList && navLinksList.classList.contains('open')) {
              closeMenu();
            }
          });
        }
      });
    }

    window.addEventListener('scroll', onScroll);

    if (window.location.hash && document.querySelector(window.location.hash)) {
      setActiveLink(window.location.hash);
    } else {
      onScroll();
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeNavAndModal);
  } else {
    initializeNavAndModal();
  }
</script>

