---
const IS_DEV = import.meta.env.DEV;

const POST_URL = IS_DEV
  ? 'http://127.0.0.1:5001/portfoliocontactform'
  : 'https://everscode-api.up.railway.app/portfoliocontactform';
---
<section id="contact" class="section contact-section">
  <div class="container">
    <h2 class="contact-title text-3xl md:text-4xl font-bold mb-8 text-center text-teal-400">Contact Me</h2>
    <div id="form-response">
      <!-- Removed action="https://formspree.io/uriel621@live.com" -->
      <form
        id="contact-form"
        class="contact-form"
        novalidate
        method="post"
        hx-post={POST_URL}
        hx-target="#form-response"
        hx-swap="outerHTML">
        <div class="input-row">
          <div class="input-group">
            <label for="first-name">First Name</label>
            <input type="text" id="first-name" name="firstName" placeholder="Your first name" required />
          </div>
          <div class="input-group">
            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" name="lastName" placeholder="Your last name" required />
          </div>
        </div>

        <div class="input-row">
          <div class="input-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" placeholder="Your phone number" pattern="^\+?[0-9\s\-]{7,15}$" />
          </div>
          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Your email address" required />
          </div>
        </div>

        <div class="input-group full-width">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" placeholder="Write your message here..." required></textarea>
        </div>

        <input type="text" name="website" id="website" style="display:none" autocomplete="off" />
        <button type="submit" class="btn-submit">Send Message</button>
      </form>
    </div>
  </div>
</section>

<style>
  #contact {
    height: 90vh;
    scroll-margin-top: 10vh;
  }

  .contact-section {
    background-color: var(--color-bg);
    color: var(--color-text);
    padding: 5rem 2rem;
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
  }

  .contact-title {
    font-size: 2.75rem;
    font-weight: 700;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--color-highlight);
  }

  form.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .input-row {
    display: flex;
    gap: 1.5rem;
  }

  @media (max-width: 600px) {
    .input-row {
      flex-direction: column;
    }

    #contact {
      height: auto;
    }

    .contact-title {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    #contact {
      height: auto;
    }
  }

  .input-group {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .input-group.full-width {
    flex: 1 1 100%;
  }

  label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
  }

  input[type="text"],
  input[type="tel"],
  input[type="email"],
  textarea {
    border: 1.5px solid #555;
    padding: 0.5rem 1rem;
    color: #222; 
  }

  input::placeholder,
  textarea::placeholder {
    color: #888;                      /* Medium-light placeholder */
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--color-highlight);
    box-shadow: 0 0 8px var(--color-highlight);
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-submit {
    align-self: center;
    background-color: var(--color-highlight);
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
    padding: 0.9rem 2.5rem;
    border: none;
    border-radius: 9999px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-shadow: 0 6px 12px rgba(79, 191, 168, 0.5);
  }

  .btn-submit:hover {
    background-color: var(--color-highlight-hover);
    box-shadow: 0 8px 16px rgba(62, 167, 144, 0.7);
  }
</style>

<script>
  const form = document.getElementById('contact-form');
  if (form) {
    form.addEventListener('submit', function (e) {
      const honeypot = (document.getElementById('website') as HTMLInputElement)?.value;
      if (honeypot) {
        e.preventDefault();
        console.warn('Bot detected - submission blocked.');
      }
    });
  }
</script>