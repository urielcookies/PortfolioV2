  <div class="logo" id="scrollToTop">EVER URIEL GARCIA</div>
  <button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </button>
  <ul class="links">
    <li><a href="#intro">INTRO</a></li>
    <li><a href="#about">ABOUT</a></li>
    <li><a href="#work">WORK</a></li>
    <li><a href="#services">SERVICES</a></li>
    <li><a href="#contact">CONTACT</a></li>
  </ul>
</nav>

<script type="module">
  const logo = document.getElementById('scrollToTop');
  const links = document.querySelectorAll('ul.links li a');
  const hamburger = document.querySelector('.hamburger');
  const navLinks = document.querySelector('ul.links');
  const sections = document.querySelectorAll('section[id]');

  logo?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
    history.replaceState(null, document.title, window.location.pathname + window.location.search);
    setActiveLink('');
    closeMenu();
  });

  function setActiveLink(hash) {
    links.forEach(link => {
      if (link.getAttribute('href') === hash) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  }

  function toggleMenu() {
    const isOpen = navLinks.classList.toggle('open');
    hamburger.classList.toggle('open');
    hamburger.setAttribute('aria-expanded', isOpen);
  }

  function closeMenu() {
    navLinks.classList.remove('open');
    hamburger.classList.remove('open');
    hamburger.setAttribute('aria-expanded', false);
  }

  hamburger?.addEventListener('click', toggleMenu);
  links.forEach(link => {
    link.addEventListener('click', () => {
      closeMenu(); // Close menu on mobile when any link is clicked
    });
  });

  function onScroll() {
    let currentSection = '';
    const scrollY = window.scrollY;

    sections.forEach(section => {
      const sectionTop = section.offsetTop - 130; // Adjust for nav height
      const sectionHeight = section.offsetHeight;
      if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
        currentSection = section.getAttribute('id');
      }
    });

    links.forEach(link => {
      link.classList.remove('active');
      if (link.getAttribute('href') === `#${currentSection}`) {
        link.classList.add('active');
      }
    });

    if (currentSection) {
      const titleSection = currentSection.charAt(0).toUpperCase() + currentSection.slice(1).toLowerCase();
      document.title = `${titleSection} â€” EversCode`;

      if (currentSection !== 'intro') {
        const newHash = `#${currentSection}`;
        if (window.location.hash !== newHash) {
          history.replaceState(null, document.title, newHash);
        }
      } else {
        history.replaceState(null, document.title, window.location.pathname + window.location.search);
      }
    } else {
      document.title = 'EversCode';
      history.replaceState(null, document.title, window.location.pathname + window.location.search);
    }
  }

  window.addEventListener('scroll', onScroll);
  setActiveLink(window.location.hash);
</script>

